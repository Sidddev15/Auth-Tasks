{
	"name": "todo-api",
	"version": "1.0.0",
	"description": "A simple RESTful API for managing a to-do list using Express and TypeScript.",
	"main": "src/index.ts",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/server.js",
		"lint": "eslint .",
		"format": "prettier --write .",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:studio": "prisma studio",
		"db:seed": "tsx prisma/seed.ts"
	},
	"author": "Siddharth Singh",
	"license": "MIT",
	"dependencies": {
		"@prisma/client": "^6.16.2",
		"bcryptjs": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^17.2.2",
		"express": "^5.1.0",
		"morgan": "^1.10.1",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.5.2",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"eslint": "^9.35.0",
		"prettier": "^3.6.2",
		"prisma": "^6.16.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2"
	}
}
